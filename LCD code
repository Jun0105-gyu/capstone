@app.route("/get_stats")
def get_stats():
    import json
    with lock:
        stats = {}
        if os.path.exists("study_log.txt"):
            with open("study_log.txt", "r") as f:
                for line in f:
                    parts = line.strip().split(",")
                    if len(parts) == 2:
                        date, seconds = parts
                        stats[date] = int(seconds)
    return jsonify(stats)
